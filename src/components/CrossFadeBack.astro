---
// Este bloque es opcional, puedes definir aquí las rutas de tus imágenes
const images = [
  "/credentials/images/backslider/bg_index_01.jpg",
  "/credentials/images/backslider/bg_index_02.jpg",
  "/credentials/images/backslider/bg_index_03.jpg",
  "/credentials/images/backslider/bg_index_04.jpg",
  "/credentials/images/backslider/bg_index_05.jpg",
];
---

<div class="crossfade">
    <div class="overlay"></div>
    {
      images.map((image) => (
        <img style={`background-image: url('${image}')`} alt="" />
      ))
    }
</div>


<style>
    /*******************
    Crossfade Background
    ********************/
    .crossfade {
        position: fixed; /* Permite que ocupe todo el fondo */
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh; /* Ocupa toda la altura de la ventana */
        overflow: hidden; /* Evita el desbordamiento */
        z-index: -1; /* Asegura que esté detrás del contenido */
    }
    .crossfade .overlay {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background: #000000;
        opacity: 0.6;
        z-index: 10;
    }

    .crossfade > img {
        animation: imageAnimation 25s linear infinite 0s;
        -webkit-animation: imageAnimation 25s linear infinite 0s;
        -moz-animation: imageAnimation 25s linear infinite 0s;
        -o-webkit-animation: imageAnimation 25s linear infinite 0s;
        backface-visibility: hidden;
        background-size: cover;
        background-position: center center;
        height: 100%;
        left: 0px;
        opacity: 0;
        position: absolute;
        top: 0px;
        width: 100%;
        z-index: 0;
    }

    .crossfade > img:nth-child(2) {
        animation-delay: 5s;
    }

    .crossfade > img:nth-child(3) {
        animation-delay: 10s;
    }

    .crossfade > img:nth-child(4) {
        animation-delay: 15s;
    }

    .crossfade > img:nth-child(5) {
        animation-delay: 20s;
    }

    @keyframes imageAnimation {
        0% {
            animation-timing-function: ease-in;
            opacity: 0;
        }
        8% {
            animation-timing-function: ease-out;
            opacity: 1;
        }
        17% {
            opacity: 1;
        }
        25% {
            opacity: 0;
        }
        100% {
            opacity: 0;
        }
    }
</style>