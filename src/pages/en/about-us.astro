---
import CorporateLayout from "../../layouts/CorporateLayout.astro";
import { getLangFromUrl } from '../../i18n/utils';
import { getI18N } from '../../i18n/loadTranslations';

// Obtiene el idioma desde la URL
const lang = getLangFromUrl(Astro.url);

// Carga las traducciones seg√∫n el idioma actual
const translations = getI18N(lang);
---

<CorporateLayout>
  <div class="swipe-section">
    <section class="panel red">
        <h1>About Us</h1>
        <h3>{translations.welcome}</h3>
    </section>
    <section class="panel purple x-100">
      Section 2
    </section>
    <section class="panel blue x-100">
       Section 3
    </section>
    <section class="panel orange x-100">
        Section 4
    </section>
  </div>
</CorporateLayout>



<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  import { initSwipeSection } from "../../utils/gsapSwipeHorizontalScroll";
  
  initSwipeSection();

  document.addEventListener("astro:after-swap", initSwipeSection);
</script>